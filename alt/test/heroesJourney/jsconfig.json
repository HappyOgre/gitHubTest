{
  "$schema": "http://json.schemastore.org/jsconfig",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": ["webpack-env", "jest"]
  },
  "include": ["src/**/*", "heroesJourney/**/*"],
}